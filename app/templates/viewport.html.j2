{% extends "base.html.j2" %}
{% import 'bootstrap/wtf.html' as wtf %}
{% block app_content %}
    <h1>Return Table</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Username</th>
                <th>Product ID</th>
                <th>Receipt No</th>
                <th>Reason</th>
                <th>Policy</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            {% for return_entry in returns %}
            <tr>
                <td>{{ return_entry.username }}</td>
                <td>{{ return_entry.product_id }}</td>
                <td>{{ return_entry.receipt_no }}</td>
                <td>{{ return_entry.reason }}</td>
                <td>{{ return_entry.policy }}</td>
                <td>{{ return_entry.created_at }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <hr>
    <h1>Product Table</h1>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Stock</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.stock }}</td>
                <td>
                    {% if product.image %}
                        <img src="{{ url_for('static', filename='product_images/' + product.image) }}" alt="{{ product.name }}" width="100">
                    {% else %}
                        <img src="{{ url_for('static', filename='default_product.png') }}" alt="Default Image" width="100">
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}