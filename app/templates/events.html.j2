{% extends 'base.html.j2' %}
{% block title %}活動 - MUJI HK{% endblock %}
{% block app_content %}


{% block styles %}
  {{ super() }}
  <link rel="stylesheet" href="{{ url_for('static', filename='events.css') }}">
{% endblock %}

    <div class="container">
        <div class="breadcrumb">
            <a href="/">首頁</a> &gt; 活動
        </div>

        <div class="event">
            <h2>香薰香水調配工作坊</h2>
            <a href="{{ url_for('perfume_workshop') }}">
                <img src="{{ url_for('static', filename='images/perfume_workshop.jpg') }}" alt="香薰香水調配工作坊" class="event-image">
            </a>
            <p>日期：2025年11月24日（六）</p>
        </div>

        <div class="event">
            <h2>「What is MUJI?」展示會</h2>
            <a href="{{ url_for('what_is_muji_workshop') }}">
                <img src="{{ url_for('static', filename='images/what_is_muji_workshop.jpg') }}" alt="What is MUJI?」展示會" class="event-image">
            </a>
            <p>日期：2025年8月17日（五）至9月5日（三）</p>
        </div>

        <div class="event">
            <h2>動物拼貼畫冊工作坊</h2>
            <a href="{{ url_for('animal_workshop') }}">
                <img src="{{ url_for('static', filename='images/animal_workshop.jpg') }}" alt="動物拼貼畫冊工作坊" class="event-image">
            </a>
            <p>日期：2025年8月11日（六）</p>
        </div>
    </div>

{% endblock %}
