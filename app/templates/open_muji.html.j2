{% extends 'base.html.j2' %}
{% block title %}展覽列表 - MUJI HK{% endblock %}
{% block app_content %}

{% block styles %}
  {{ super() }}
  <link rel="stylesheet" href="{{ url_for('static', filename='open_muji.css') }}">
{% endblock %}

<div class="container">
    <!-- 面包屑导航 -->
    <div class="breadcrumb">
        <a href="/">首頁</a> &gt; 展覽列表
    </div>

    <!-- 主标题区 -->
    <div class="event-header">
        <h1 class="main-title">Open MUJI</h1>
        <p class="header-description">
            Open MUJI 為一個展示無印良品提案，與顧客交流的活動空間。
        </p>
        <img src="{{ url_for('static', filename='images/G8_writing.jpg') }}" 
             alt="Open MUJI 主视觉" 
             class="header-image">
    </div>

    <!-- 事件分类容器 -->
    <div class="event-container">
        <!-- 主分类标题 -->
        <div class="category-header">
            <h2 class="category-title">MUJI 無印良品</h2>
            <p class="category-subtitle">品牌核心企劃展</p>
        </div>

        <!-- 子事件列表 -->
        <ul class="event-sublist">
            <!-- 子事件 1 -->
            <li class="sub-event">
                <div class="sub-event-content">
                    <h3 class="sub-event-title">無印良品 Mil Mill 喵坊展示</h3>
                    <p class="sub-event-date">Feb 2025</p>
                    <p class="sub-event-desc">環保造紙工藝與當地文化結合</p>
                </div>
                <img src="{{ url_for('static', filename='images/muji_mil_mil.jpg') }}" 
                     alt="喵坊展示" 
                     class="sub-event-image">
            </li>

            <!-- 子事件 2 -->
            <li class="sub-event">
                <div class="sub-event-content">
                    <h3 class="sub-event-title">無印良品 八八木書法展示</h3>
                    <p class="sub-event-date">Feb 2025</p>
                    <p class="sub-event-desc">傳統書法與現代生活美學對話</p>
                </div>
                <img src="{{ url_for('static', filename='images/G8_writing.jpg') }}" 
                     alt="书法展示" 
                     class="sub-event-image">
            </li>

            <!-- 子事件 3 -->
            <li class="sub-event">
                <div class="sub-event-content">
                    <h3 class="sub-event-title">無印良品 Ditto Ditto 香港主題活版印刷展覽</h3>
                    <p class="sub-event-date">Nov 2025</p>
                    <p class="sub-event-desc">活字印刷技法的當代演繹</p>
                </div>
                <img src="{{ url_for('static', filename='images/ditto.jpg') }}" 
                     alt="活版印刷" 
                     class="sub-event-image">
            </li>
        </ul>
    </div>
</div>
{% endblock %}
