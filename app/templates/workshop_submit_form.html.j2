{% extends 'base.html.j2' %}
{% block title %}工作坊報名表單 - MUJI HK{% endblock %}
{% block app_content %}

{% block styles %}
  {{ super() }}
  <link rel="stylesheet" href="{{ url_for('static', filename='workshop_submit_form.css') }}">
{% endblock %}

    <div class="form-container" style="margin-top: var(--navbar-height);>
        <h1 class="mb-4 text-center">工作坊報名表單</h1>
        <div class="form-header">
            <p class="form-description">請填寫以下資訊完成報名</p>  <!-- 新增的提示文字 -->
        </div>
        
        <form method="POST" action="{{ url_for('workshop_submit_form') }}" novalidate>
            {{ form.hidden_tag() }}
            
            <div class="form-group">
                {{ form.name.label }}
                {{ form.name() }}
                {% for error in form.name.errors %}
                    <span class="error-message">{{ error }}</span>
                {% endfor %}
            </div>

            <div class="form-group">
                {{ form.email.label }}
                {{ form.email() }}
                {% for error in form.email.errors %}
                    <span class="error-message">{{ error }}</span>
                {% endfor %}
            </div>

            <div class="form-group">
                {{ form.project.label }}
                {{ form.project() }}
                {% for error in form.project.errors %}
                    <span class="error-message">{{ error }}</span>
                {% endfor %}
            </div>

            {{ form.submit() }}
        </form>
    </div>


{% endblock %}